
html
  head
    title= title
    link(rel="stylesheet", href="/css/style.css")
  body
    a(href="/") Return to Homepage

    form(action="/update-cobj" method="POST")
      if id
        input(type="hidden" name="id" value=id)

      label Pet Name:
      input(type="text" name="pet_name" value=(data ? data.pet_name : ''))
      br

      label Pet Type:
      input(type="text" name="pet_type" value=(data ? data.pet_type : ''))
      br

      label Age:
      input(type="number" name="age" value=(data ? data.age : ''))
      br

      button(type="submit") Save
