doctype html
html
  head
    title Pets Table
    style.
      body {
        font-family: Arial, sans-serif;
        padding: 30px;
      }
      h1 {
        font-size: 40px;
        margin-bottom: 20px;
      }
      table {
        width: 80%;
        border-collapse: collapse;
        margin-top: 20px;
        font-size: 20px;
      }
      th, td {
        border: 1px solid #ccc;
        padding: 12px;
      }
      th {
        background: #ffccd2;
        text-align: center;
        font-weight: bold;
      }
      a {
        font-size: 22px;
      }

  body
    h1 Custom Object Table

    a(href="/update-cobj") Add/Update this table

    table
      thead
        tr
          th Name
          th Type
          th Age
      tbody
        if records.length
          each item in records
            tr
              td= item.properties.pet_name
              td= item.properties.pet_type
              td= item.properties.age
        else
          tr
            td(colspan="3") No records found
