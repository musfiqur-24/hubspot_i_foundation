html
  head
    link(rel="stylesheet", href="/css/style.css")

  body
    h1 Pets Management

    include pets-form

    h2 Pet List
    table
      tr
        th Name
        th Type
        th Age
        th Edit
        th Delete
      each pet in pets
        tr
          td= pet.properties.pet_name
          td= pet.properties.pet_type
          td= pet.properties.age
          td 
            button(onclick=`fillForm('${pet.id}', '${pet.properties.pet_name}', '${pet.properties.pet_type}', '${pet.properties.age}')`) Edit
          td 
            a(href=`/delete/${pet.id}`) Delete

    .pagination
      if after
        a(href="/") Previous
      if nextPage
        a(href=`/?after=${nextPage}`) Next

    script.
      function fillForm(id, name, type, age) {
        document.getElementById("id").value = id;
        document.getElementById("pet_name").value = name;
        document.getElementById("pet_type").value = type;
        document.getElementById("age").value = age;
        document.getElementById("form-title").innerText = "Update Pet";
        document.getElementById("submit-btn").innerText = "Update";
        document.getElementById("form-action").action = "/update";
      }
